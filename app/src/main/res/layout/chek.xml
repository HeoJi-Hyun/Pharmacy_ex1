<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@color/pharmacy"
            android:completionThreshold="1"
            android:orientation="horizontal"
            android:paddingTop="10sp"
            android:paddingBottom="4sp"
            app:layoutDescription="@xml/ckeck_list_scene">

            <ImageView
                android:id="@+id/imageChek1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search" />

            <AutoCompleteTextView
                android:id="@+id/autoChek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="질병을 입력하세요."
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnChek1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round"
                android:text="검색"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="vertical">
                <ToggleButton
                    android:id="@+id/tog1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="치매"
                    android:textColor="#000000"
                    android:textOff="치매"
                    android:textOn="치매 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tog2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:textColor="#000000"
                    android:textOff="노년백내장"
                    android:textOn="노년백내장 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tog3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="ToggleButton"
                    android:textColor="#000000"
                    android:textOff="폐렴"
                    android:textOn="폐렴 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tog4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="뇌경색증임"
                    android:textColor="#000000"
                    android:textOff="뇌경색증"
                    android:textOn="뇌경색증 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <ToggleButton
                    android:id="@+id/tog5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="ToggleButton"
                    android:textColor="#000000"
                    android:textOff="신장병"
                    android:textOn="신장병 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tog6"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="ToggleButton"
                    android:textColor="#000000"
                    android:textOff="어지럼증"
                    android:textOn="어지럼증 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tog7"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="ToggleButton"
                    android:textColor="#000000"
                    android:textOff="심부전"
                    android:textOn="심부전 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <ToggleButton
                    android:id="@+id/tog8"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="ToggleButton"
                    android:textColor="#000000"
                    android:textOff="골절"
                    android:textOn="골절 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <ToggleButton
                    android:id="@+id/tog9"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="ToggleButton"
                    android:textColor="#000000"
                    android:textOff="척추병증"
                    android:textOn="척추병증 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tog10"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/button_round"
                    android:shadowColor="#FF9800"
                    android:text="ToggleButton"
                    android:textColor="#000000"
                    android:textOff="무릎 관절증"
                    android:textOn="무릎 관절증 O"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                    <ToggleButton
                        android:id="@+id/tog11"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5sp"
                        android:background="@drawable/button_round"
                        android:shadowColor="#FF9800"
                        android:text="ToggleButton"
                        android:textColor="#000000"
                        android:textOff="당뇨병"
                        android:textOn="당뇨병 O"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ToggleButton
                        android:id="@+id/tog12"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5sp"
                        android:background="@drawable/button_round"
                        android:minHeight="48dp"
                        android:shadowColor="#FF9800"
                        android:text="ToggleButton"
                        android:textColor="#000000"
                        android:textOff="담석증"
                        android:textOn="담석증 O"
                        android:textSize="30sp"
                        android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btnChek2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_login"
        android:gravity="center|center_horizontal"
        android:text="저장"
        android:textSize="24sp" />
</LinearLayout>
