<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1Pharm7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/hyper2"
            android:gravity="center_horizontal"
            android:text="삼육정문약국"
            android:textColor="@color/pharmacy"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pharm8img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hyper2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image2Pharm8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv11Pharm8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="도로명 : 서울 동대문구 망우로 86길, 1층"
                    android:textColor="#000000"
                    android:textColorHint="#989898"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv2Pharm8"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"

                    android:text="지번 : 휘경동 275-5"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv3Pharm8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hyper"
            android:textColor="#000000"
            android:textColorHint="#D6D6D6"
            android:textSize="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image3Pharm8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_1" />

            <TextView
                android:id="@+id/tv4Pharm8"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="02-2243-0330"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv5Pharm8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hyper"
            android:textColor="#000000"
            android:textSize="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image4Pharm8"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_2" />

            <TextView
                android:id="@+id/tv6Pharm8"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="제로페이"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv7Pharm8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hyper"
            android:textSize="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image5Pharm8"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_3" />

            <TextView
                android:id="@+id/tv8Pharm8"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="이용시간 : 월~금 08:30 - 19:00"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv10Pharm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                                 일 08:30 - 18:00"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv10Pharm8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                                 토 정기휴무 (매주 토요일)"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv9Pharm8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hyper"
            android:textColor="#000000"
            android:textSize="5dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>