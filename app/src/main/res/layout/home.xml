<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home"
    android:background="@color/white">
    <!--    tools:context=".Home"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/pharmacy">

        <Button
            android:id="@+id/button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:background="@drawable/menu" />

        <LinearLayout
            android:layout_width="249dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="약국번가"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/homeProv"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/search"
            android:minHeight="48dp"
            android:textColor="#291717"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:layout_weight="0">


            <fragment
                android:id="@+id/googleMap"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvhome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 약 이름 1"
                    android:textColor="#FD730E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvhome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="• 약 이름 2"
                    android:textColor="#FD730E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvhome3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="• 약 이름 3"
                    android:textColor="#FD730E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvhome4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:text="• 약 이름 4"
                    android:textColor="#FD730E"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp">


                <ImageView
                    android:id="@+id/imagehome1"
                    android:layout_width="match_parent"
                    android:layout_height="169dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/memo" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="108dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edithome1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:hint="메모를 입력하세요"
                        android:inputType="textPersonName"
                        android:textColorHint="#505050"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/pharmacy"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMy"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/inform"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/homePharm"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_round"
            android:text="약국"
            android:textColor="#392020"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,TextContrastCheck" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_camera"
            android:padding="0dp"
            android:src="@drawable/camera"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/homeAla"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/ala"
            android:minHeight="48dp"
            android:textColor="#291717"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,TextContrastCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/homeChek"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/review"
            android:textColor="#291717"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,TextContrastCheck,TouchTargetSizeCheck" />

    </LinearLayout>
</LinearLayout>