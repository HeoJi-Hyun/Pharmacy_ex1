                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/memook"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="104dp"
                            android:background="@drawable/button_join"
                            android:backgroundTint="@color/white"
                            android:text="저장"
                            android:textColor="#99000000"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/edithome1"
                            app:layout_constraintStart_toStartOf="@+id/edithome1"
                            app:layout_constraintTop_toTopOf="@+id/edithome1"
                            app:layout_constraintVertical_bias="0.914" />

                        <EditText
                            android:id="@+id/edithome1"
                            android:layout_width="280dp"
                            android:layout_height="249dp"
                            android:background="@drawable/memo"
                            android:gravity="center"
                            android:hint="메모를 입력하세요"
                            android:inputType="textPersonName"
                            android:textColor="#353535"
                            android:textColorHint="#505050"
