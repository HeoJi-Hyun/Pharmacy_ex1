<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="219dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_2"
            android:contentDescription="TODO" />
    </LinearLayout>

    <EditText
        android:id="@+id/edId1"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8sp"
        android:backgroundTint="#FE730E"
        android:ems="10"
        android:hint="@string/id"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#DD2C00"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edPw1"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8sp"
        android:backgroundTint="#FE730E"
        android:ems="10"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5sp"
        android:background="@drawable/button_login"
        android:backgroundTint="#FE730E"
        android:text="로그인"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_join"
        android:text="@string/join1"
        android:textColor="@color/pharmacy"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnAla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="봉수진꺼(알람)" />

    <Button
        android:id="@+id/btnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메인화면 바로가" />

    <Button
        android:id="@+id/btnAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="자동완성 바로가" />
</LinearLayout>