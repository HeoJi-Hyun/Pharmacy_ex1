<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Alarm">

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_gravity="center"
        android:layout_marginTop="241dp"
        android:layout_marginBottom="140dp"
        android:text="설정된 알람이 없습니다"
        android:textAlignment="center"
        android:textColor="#393939"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edPill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/edpill"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/time_btn"
        android:layout_width="150dp"
        android:layout_height="50sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/button_camera"
        android:text="알람 설정하기"
        android:textAlignment="center"
        android:textColor="@color/pharmacy"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/alarm_cancel_btn"
        android:layout_width="150dp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_login"
        android:text="@string/cnlth"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />


</LinearLayout>